{
    "openapi": "3.0.0",
    "info": {
        "title": "Unnamed Galvyn API",
        "version": "v0.0.0"
    },
    "paths": {
        "/api/v1/auth/auth": {
            "get": {
                "operationId": "auth",
                "parameters": [
                    {
                        "in": "query",
                        "name": "client_id",
                        "schema": {
                            "description": "Client id",
                            "allOf": [
                                {
                                    "$ref": "#/components/schemas/OidcProviderUuid"
                                }
                            ]
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "nonce",
                        "schema": {
                            "nullable": true,
                            "description": "Optional nonce for protection against replay attacks",
                            "allOf": [
                                {
                                    "$ref": "#/components/schemas/MaxStr_255"
                                }
                            ]
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "redirect_uri",
                        "schema": {
                            "description": "URL to redirect the user to after successful authentication",
                            "type": "string",
                            "format": "uri"
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "response_mode",
                        "schema": {
                            "nullable": true,
                            "description": "Only \"query\" is currently supported",
                            "type": "string"
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "response_type",
                        "schema": {
                            "description": "Only \"code\" is currently supported",
                            "type": "string"
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "scope",
                        "schema": {
                            "description": "The scopes the application requests",
                            "type": "string"
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "state",
                        "schema": {
                            "nullable": true,
                            "description": "Pass-through parameter",
                            "type": "string"
                        },
                        "style": "form"
                    }
                ],
                "responses": {
                    "303": {
                        "description": ""
                    },
                    "307": {
                        "description": ""
                    },
                    "308": {
                        "description": ""
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/sign-in": {
            "post": {
                "operationId": "sign_in",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SignInRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": ""
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/sign-out": {
            "post": {
                "operationId": "sign_out",
                "responses": {
                    "200": {
                        "description": ""
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/finish-auth": {
            "get": {
                "operationId": "finish_auth",
                "responses": {
                    "303": {
                        "description": ""
                    },
                    "307": {
                        "description": ""
                    },
                    "308": {
                        "description": ""
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/.well-known/openid-configuration": {
            "get": {
                "operationId": "discovery",
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DiscoveryResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/jwks.json": {
            "get": {
                "operationId": "jwks",
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/token": {
            "post": {
                "operationId": "get_token",
                "requestBody": {
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/TokenRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TokenResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/userinfo": {
            "get": {
                "operationId": "get_userinfo",
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Claims"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ApiErrorResponse": {
                "description": "The response that is sent in a case of an error the caller should report to an admin",
                "type": "object",
                "properties": {
                    "trace_id": {
                        "description": "ID of the opentelemetry trace this error originated in",
                        "type": "string"
                    }
                },
                "required": [
                    "trace_id"
                ]
            },
            "Claims": {
                "description": "Data for all claims",
                "type": "object",
                "properties": {
                    "email": {
                        "description": "The email",
                        "type": "string"
                    },
                    "email_verified": {
                        "description": "Whether the mail is verified",
                        "type": "boolean"
                    },
                    "name": {
                        "description": "Name of the user",
                        "type": "string"
                    },
                    "preferred_username": {
                        "description": "Preferred username",
                        "type": "string"
                    },
                    "sub": {
                        "description": "Identifier for the End-User",
                        "type": "string"
                    }
                },
                "required": [
                    "sub"
                ]
            },
            "DiscoveryResponse": {
                "description": "Response for the discovery endpoint",
                "type": "object",
                "properties": {
                    "authorization_endpoint": {
                        "type": "string",
                        "format": "uri"
                    },
                    "id_token_signing_alg_values_supported": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "issuer": {
                        "type": "string",
                        "format": "uri"
                    },
                    "jwks_uri": {
                        "type": "string",
                        "format": "uri"
                    },
                    "response_types_supported": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "subject_types_supported": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "token_endpoint": {
                        "type": "string",
                        "format": "uri"
                    },
                    "userinfo_endpoint": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "required": [
                    "authorization_endpoint",
                    "id_token_signing_alg_values_supported",
                    "issuer",
                    "jwks_uri",
                    "response_types_supported",
                    "subject_types_supported",
                    "token_endpoint",
                    "userinfo_endpoint"
                ]
            },
            "MaxStr_255": {
                "type": "string",
                "maxLength": 255
            },
            "MaxStr_64": {
                "type": "string",
                "maxLength": 64
            },
            "MaxStr_72": {
                "type": "string",
                "maxLength": 72
            },
            "OidcProviderUuid": {
                "description": "Client id of an oidc provider",
                "type": "string",
                "format": "uuid"
            },
            "SignInRequest": {
                "description": "Sign in request",
                "type": "object",
                "properties": {
                    "password": {
                        "description": "Password",
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/MaxStr_72"
                            }
                        ]
                    },
                    "username": {
                        "description": "Username",
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/MaxStr_255"
                            }
                        ]
                    }
                },
                "required": [
                    "password",
                    "username"
                ]
            },
            "TokenRequest": {
                "description": "Request for a token",
                "type": "object",
                "properties": {
                    "code": {
                        "description": "Code to exchange for a token",
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/MaxStr_64"
                            }
                        ]
                    },
                    "grant_type": {
                        "description": "Type of the grant",
                        "type": "string"
                    },
                    "redirect_uri": {
                        "description": "Redirect url of the initial request",
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "grant_type",
                    "redirect_uri"
                ]
            },
            "TokenResponse": {
                "description": "Token response",
                "type": "object",
                "properties": {
                    "access_token": {
                        "description": "Access token",
                        "type": "string"
                    },
                    "expires_in": {
                        "description": "Expires in",
                        "type": "integer",
                        "minimum": 0,
                        "format": "uint"
                    },
                    "id_token": {
                        "description": "Access token",
                        "type": "string"
                    },
                    "token_type": {
                        "description": "Type of the token",
                        "type": "string"
                    }
                },
                "required": [
                    "access_token",
                    "expires_in",
                    "id_token",
                    "token_type"
                ]
            }
        }
    }
}
