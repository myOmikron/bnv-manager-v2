{
    "openapi": "3.0.0",
    "info": {
        "title": "Unnamed Galvyn API",
        "version": "v0.0.0"
    },
    "paths": {
        "/api/v1/auth/auth": {
            "get": {
                "operationId": "auth",
                "parameters": [
                    {
                        "in": "query",
                        "name": "client_id",
                        "schema": {
                            "description": "Client id",
                            "allOf": [
                                {
                                    "$ref": "#/components/schemas/OidcProviderUuid"
                                }
                            ]
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "nonce",
                        "schema": {
                            "nullable": true,
                            "description": "Optional nonce for protection against replay attacks",
                            "allOf": [
                                {
                                    "$ref": "#/components/schemas/MaxStr_255"
                                }
                            ]
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "redirect_uri",
                        "schema": {
                            "description": "URL to redirect the user to after successful authentication",
                            "type": "string",
                            "format": "uri"
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "response_mode",
                        "schema": {
                            "nullable": true,
                            "description": "Only \"query\" is currently supported",
                            "type": "string"
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "response_type",
                        "schema": {
                            "description": "Only \"code\" is currently supported",
                            "type": "string"
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "scope",
                        "schema": {
                            "description": "The scopes the application requests",
                            "type": "string"
                        },
                        "style": "form"
                    },
                    {
                        "in": "query",
                        "name": "state",
                        "schema": {
                            "nullable": true,
                            "description": "Pass-through parameter",
                            "type": "string"
                        },
                        "style": "form"
                    }
                ],
                "responses": {
                    "303": {
                        "description": ""
                    },
                    "307": {
                        "description": ""
                    },
                    "308": {
                        "description": ""
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/sign-in": {
            "post": {
                "operationId": "sign_in",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SignInRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": ""
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/sign-out": {
            "post": {
                "operationId": "sign_out",
                "responses": {
                    "200": {
                        "description": ""
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/finish-auth": {
            "get": {
                "operationId": "finish_auth",
                "responses": {
                    "303": {
                        "description": ""
                    },
                    "307": {
                        "description": ""
                    },
                    "308": {
                        "description": ""
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/.well-known/openid-configuration": {
            "get": {
                "operationId": "discovery",
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DiscoveryResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/jwks.json": {
            "get": {
                "operationId": "jwks",
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/token": {
            "post": {
                "operationId": "get_token",
                "requestBody": {
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/TokenRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TokenResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ApiErrorResponse": {
                "description": "The response that is sent in a case of an error",
                "type": "object",
                "properties": {
                    "message": {
                        "description": "A human-readable error message.\n\nMay be used for displaying purposes",
                        "type": "string"
                    },
                    "status_code": {
                        "description": "The Status code for the error.\n\nImportant: Does not match http status codes",
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/ApiStatusCode"
                            }
                        ]
                    }
                },
                "required": [
                    "message",
                    "status_code"
                ]
            },
            "ApiStatusCode": {
                "description": "The Status code that are returned throughout the API",
                "type": "integer",
                "enum": [
                    1000,
                    1001,
                    1002,
                    1003,
                    2000
                ]
            },
            "DiscoveryResponse": {
                "description": "Response for the discovery endpoint",
                "type": "object",
                "properties": {
                    "authorization_endpoint": {
                        "type": "string",
                        "format": "uri"
                    },
                    "id_token_signing_alg_values_supported": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "issuer": {
                        "type": "string",
                        "format": "uri"
                    },
                    "jwks_uri": {
                        "type": "string",
                        "format": "uri"
                    },
                    "response_types_supported": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "subject_types_supported": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "token_endpoint": {
                        "type": "string",
                        "format": "uri"
                    },
                    "userinfo_endpoint": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "required": [
                    "authorization_endpoint",
                    "id_token_signing_alg_values_supported",
                    "issuer",
                    "jwks_uri",
                    "response_types_supported",
                    "subject_types_supported",
                    "token_endpoint",
                    "userinfo_endpoint"
                ]
            },
            "MaxStr_255": {
                "type": "string",
                "maxLength": 255
            },
            "MaxStr_64": {
                "type": "string",
                "maxLength": 64
            },
            "MaxStr_72": {
                "type": "string",
                "maxLength": 72
            },
            "OidcProviderUuid": {
                "description": "Client id of an oidc provider",
                "type": "string",
                "format": "uuid"
            },
            "SignInRequest": {
                "description": "Sign in request",
                "type": "object",
                "properties": {
                    "password": {
                        "description": "Password",
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/MaxStr_72"
                            }
                        ]
                    },
                    "username": {
                        "description": "Username",
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/MaxStr_255"
                            }
                        ]
                    }
                },
                "required": [
                    "password",
                    "username"
                ]
            },
            "TokenRequest": {
                "type": "object",
                "properties": {
                    "code": {
                        "$ref": "#/components/schemas/MaxStr_64"
                    },
                    "grant_type": {
                        "type": "string"
                    },
                    "redirect_uri": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "grant_type",
                    "redirect_uri"
                ]
            },
            "TokenResponse": {
                "type": "object",
                "properties": {
                    "access_token": {
                        "type": "string"
                    },
                    "expires_in": {
                        "type": "integer",
                        "minimum": 0,
                        "format": "uint"
                    },
                    "id_token": {
                        "type": "string"
                    },
                    "token_type": {
                        "type": "string"
                    }
                },
                "required": [
                    "access_token",
                    "expires_in",
                    "id_token",
                    "token_type"
                ]
            }
        }
    }
}
